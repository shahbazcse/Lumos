generator client {
  provider = "prisma-client-js"
}

// TODO: Move to MongoDB, Planet Scale not available for India

datasource db {
  provider  = "postgres"
  url       = env("DATABASE_URL")
  relationMode = "prisma"
}

model UserApiLimit {
  id        String      @id @default(cuid())
  userId    String   @unique
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}